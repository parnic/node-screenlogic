{
  "compilerOptions": {
    "allowJs": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2018",
    "preserveConstEnums": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["messages/**/*.ts", "*.ts", "index.ts", "utils/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
